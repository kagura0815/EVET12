<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="EVet.Pages.AppointmentTime"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="20" VerticalOptions="Center">
        <Label FontSize="20" Text="Choose Appointment Time" />
        <DatePicker x:Name="AppointmentDatePicker" DateSelected="OnDateSelected" />
        <TimePicker x:Name="AppointmentTimePicker" />

        <Label
            x:Name="UnavailableTimesLabel"
            FontSize="16"
            Text=""
            TextColor="Red" />

    </VerticalStackLayout>
</ContentView>
