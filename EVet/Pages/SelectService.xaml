<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="EVet.Pages.SelectService"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="20" VerticalOptions="Center">
        <Label FontSize="20" Text="Select a Service" />
        <Picker Title="Service">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>General Check-Up</x:String>
                    <x:String>Vaccination</x:String>
                    <x:String>Dental Cleaning</x:String>
                    <x:String>Surgery</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
</ContentView>
